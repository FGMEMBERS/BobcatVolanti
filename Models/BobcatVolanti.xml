<PropertyList>

  <path>BobcatVolanti.ac</path>

  <nasal>
    <load>
      var livery_update = aircraft.livery_update.new("Aircraft/BobcatVolanti/Models/Liveries");
      var self = cmdarg();

      var float_0 = self.getNode("sim/multiplay/generic/float[0]", 1);
      var float_1 = self.getNode("sim/multiplay/generic/float[1]", 1);

    </load>
  <unload><![CDATA[
    livery_update.stop();
  ]]></unload>
  </nasal>
  <!-- Main rotor-->
 <animation>
    <type>spin</type>
<object-name>MainRotor</object-name>
 <property>rotors/main/rpm</property>
    <factor> 5 </factor>
    <center>
      <x-m> 0.21367 </x-m>
      <y-m> 0.0 </y-m>
      <z-m>  1.72308 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y>  0 </y>
      <z>  1 </z>
    </axis>
  </animation>
 <!-- Tail Rotor -->
<animation>
    <type>spin</type>
<object-name>SideRotor</object-name>
 <property>rotors/main/rpm</property>
    <factor> 1 </factor>
    <center>
      <x-m> 2.33154 </x-m>
      <y-m> 1.01669 </y-m>
      <z-m>  0.90273 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y>  1 </y>
      <z>  0 </z>
